  <%= f.error_messages %>

  <p>
    <%= f.label :milk %><br />
    <%= f.text_field :milk %>
  </p>
  <p>
    <%= f.label :size %><br />
    <%= f.text_field :size %>
  </p>
  <p>
    <%= f.label :drink %><br />
